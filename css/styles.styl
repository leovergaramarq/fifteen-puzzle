    min-height: 100vh

*
    letter-spacing: 0.1rem
    box-sizing: border-box
    margin: 0

.btn
    cursor: pointer
    &-primary
        background-color: brown_medium
        color: apricot
        border: 2px solid brown_medium
        border-radius: 10px
        padding: 0.5rem 1rem
        font-size: 1.5rem
        font-weight: bold
        &:hover
            background-color: brown_light
            color: apricot

.img-cont
    position: relative
    
    img
        position: absolute
        top: 0
        left: 0
        width: 100%
        height: 100%

.title
    margin-top: 1rem
    text-align: center
    font-size: 4rem
    font-weight: bold
    letter-spacing: 0.3rem

    @media screen and (max-width: 900px)
        font-size: 3rem

main
    display: flex
    gap: 1rem
    
    .content
        position: relative
            
        .table
            display: flex
            flex-wrap: wrap
            justify-content: center
            align-items: center
            border: 4px solid brown_dark
            border-radius: 10px
            background-color: brown_dark

            .tile
                user-select: none
                width: 25%
                // flex-basis: 24%
                
                &:not(.tile-16)
                    border-radius: 10px
                    background-color: apricot
                    border: 2px solid brown_dark
                    display: flex
                    justify-content: center
                    align-items: center
                    font-weight: bold
                    color: grey_dark

                    &:hover
                        background-color: brown_light
                        color: apricot

        .game
            .undo-redo
                display: flex
                justify-content: center
                gap: 2rem

                *
                    width: 50px
                    height: 60px
                    cursor: pointer
                    &:hover
                        scale: 1.05
                        
            .table.playable
                max-width: 80vw

                .tile
                    height: 100px
                    width: 25%
                    font-size: 2rem
                    
                    &:not(.tile-16)
                        cursor: pointer
                        
                for num in (1..16)
                    .tile-{num}
                        order: num
            .actions
                margin-top: 1rem
                display: flex
                justify-content: center
                gap: 1rem
        
        .guide
            position: absolute
            left: 0
            top: 0
            transform: translateX(-100%)
            margin: 2rem 0 0 -1rem
            z-index: 40
            
            @media screen and (max-width: 900px)
                padding 20px
                top: unset
                bottom: 0
                transform: translateY(100%)
                margin: 0 0 -2rem -1rem
            
            &-title
                font-size: 1.2rem

            .table
                max-width: 200px
                margin-top: 0.5rem
                
                @media screen and (max-width: 900px)
                    max-width: 128px

                .tile
                    font-size: 1.2rem
                    height: 50px
                    width: 25%
                    cursor: default
                    
        .stats
            position: absolute
            right: 0
            top 0
            transform: translateX(100%)
            z-index: 40
            margin: 4rem -1rem 0 0
            display: flex
            flex-direction: column
            gap: 1rem
            font-size: 1.3rem
            
            @media screen and (max-width: 900px)
                padding 20px
                top: unset
                bottom: 0
                transform: translateY(100%)
                margin: 0 -1rem -2rem 0
                